{
  "name": "figify-mcp",
  "version": "1.5.1",
  "description": "MCP server that converts Next.js pages to Figma designs - Code to Figma powered by Claude",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "figify-mcp": "./dist/cli.js"
  },
  "files": ["dist", "figma-plugin"],
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "server": "node dist/index.js",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "postinstall": "npx playwright install chromium || true"
  },
  "keywords": [
    "mcp",
    "figma",
    "nextjs",
    "design",
    "screenshot",
    "claude",
    "anthropic",
    "code-to-design",
    "design-tools",
    "dom-to-figma",
    "layer-extraction"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/figify-mcp.git"
  },
  "homepage": "https://github.com/user/figify-mcp#readme",
  "bugs": {
    "url": "https://github.com/user/figify-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "playwright": "^1.40.0",
    "ws": "^8.16.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
